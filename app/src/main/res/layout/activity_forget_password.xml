<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gymsignup"
    tools:context=".Activities.ForgetPasswordActivity">

    <EditText
        android:id="@+id/token"
        android:layout_width="287dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Enter token number"
        android:inputType="textPersonName"
        android:textColorHint="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edittext_bg"
        android:textColorHint="@color/grey"
        android:hint="Enter New Password"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/token"
        app:layout_constraintStart_toStartOf="@+id/token"
        app:layout_constraintTop_toBottomOf="@+id/token" />

    <EditText
        android:id="@+id/rpwd"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:textColorHint="@color/grey"
        android:hint="Re enter New Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/pwd"
        app:layout_constraintStart_toStartOf="@+id/pwd"
        app:layout_constraintTop_toBottomOf="@+id/pwd" />

    <Button
        android:id="@+id/update"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_bg"
        android:text="Update"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/rpwd"
        app:layout_constraintStart_toStartOf="@+id/rpwd"
        app:layout_constraintTop_toBottomOf="@+id/rpwd" />

    <TextView
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Update Password"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>